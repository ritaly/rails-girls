<p id="notice"><%= notice %></p>

<h1>Ruby on Rails app with ideas</h1>
<div class="row">
<div class="col-lg-12">
 <div class="pull-right">
    <%= link_to 'Add New Idea!!!', new_idea_path, :class => "btn btn-warning" %>
  </div>
  </div>
</div>
</br>
<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <%= image_tag idea.picture_url, width: '100%' if idea.picture.present? %>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>
<br />

<pre> Actions for listed images: </pre>
<br />


<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= image_tag idea.picture_url(:thumb) if idea.picture.present? %></td>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
        <td><%= link_to 'Show', idea, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', idea, :class => "btn btn-danger" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


